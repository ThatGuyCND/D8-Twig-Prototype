{% import "PT/macros/assets.twig" as assets %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    {{ assets.stylesheet('/app/assets/css/system.css') }}

    <title>Prontotype - Test Prototype</title>
</head>
<body>

    <div id="pt-content">

        <h1>Test Prototype</h1>

        <p>This is the test prototype of prontotype, used for functional testing the application.</p>

        {% import 'PT/macros/navigation.twig' as nav %}

        <div id="navigation-default">
            {{ nav.page_tree() }}
        </div>

        <div id="navigation-id">
            {{ nav.page_tree({id: 'navid'}) }}
        </div>

        <div id="navigation-hide-index">
            {{ nav.page_tree({hide_index: true}) }}
        </div>

        <div id="navigation-depth-1">
            {{ nav.page_tree({depth: 1}) }}
        </div>

        <div id="navigation-sub-mammals">
            {{ nav.page_tree({start_from: 'animals/mammals'}) }}
        </div>

        </div>

</body>
</html>
